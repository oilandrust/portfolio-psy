{
  "name": "portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://www.olivier-psy.fr",
  "scripts": {
    "dev": "next dev",
    "build": "npm run build-portfolio && next build",
    "preview": "next start",
    "export": "npm run build-portfolio && next build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "npm run export && git add out -f && git commit -m 'Deploy to GitHub Pages' && git push",
    "build-portfolio": "node build-portfolio.js",
    "pdf:cv": "node scripts/cv-to-pdf.js all",
    "pdf:cv:fr": "node scripts/cv-to-pdf.js fr",
    "pdf:cv:en": "node scripts/cv-to-pdf.js en",
    "pdf:cv:all": "node scripts/cv-to-pdf.js all",
    "crop-square": "node scripts/crop-square.js",
    "img:resize": "node scripts/resize-image.js",
    "img:resize:interests": "node scripts/batch-resize-interests.js"
    ,
    "fix:md-frontmatter-media": "node scripts/fix-md-frontmatter-media.js"
  },
  "dependencies": {
    "@picocss/pico": "^2.1.1",
    "dotenv": "^17.2.2",
    "googleapis": "^159.0.0",
    "html2pdf.js": "^0.12.1",
    "js-yaml": "^4.1.0",
    "next": "^16.0.1",
    "puppeteer": "^24.23.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.3",
    "sharp": "^0.34.3",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "vite": "^7.1.2"
  }
}
